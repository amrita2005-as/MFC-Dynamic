<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Prediction Result</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="styles.css" />  
</head>
<body>
  <header class="main-header">
    <a href="/" class="logo-link">
      <img src="/images/logo.png" alt="PowerSprout Logo" class="navbar-logo" />
    </a>
    <nav class="nav-links">
      <a href="/">Home</a>
      <a href="/dashboard">Dashboard</a>
      <a href="/#about">About</a>
    </nav>
    <img src="/images/menu.png" alt="Menu Icon" class="menu-icon" id="menuToggle" />
  </header>

  <!-- Slide-in Menu -->
  <div class="slide-menu" id="slideMenu">
    <div class="slide-menu-content">
      <a href="/">Home</a>
      <a href="/dashboard">Dashboard</a>
      <a href="/#about">About</a>
      <a href="/vision">Vision</a>
      <a href="/mission">Mission</a>
      <a href="/#team">Team</a>
      <a href="/iot">IOT</a>
    </div>
  </div>

  <br>  <br>  <br>  <br> 
  <header>
    <h1>Predicted Energy Output</h1>
    <p>Your estimated energy output is: <strong><%= prediction %> mJ</strong></p>
  </header>

  <main>
    <div class="card">
      <h2>Input Values</h2>
      <ul>
        <li><strong>pH:</strong> <%= input.pH %></li>
        <li><strong>Temperature (°C):</strong> <%= input.temperature %></li>
        <li><strong>Gas Level:</strong> <%= input.gas_level %></li>
        <li><strong>Weight (kg):</strong> <%= input.weight_kg %></li>
      </ul>

      <h2>Predicted Energy Output</h2>
      <p><strong>Energy:</strong> <%= prediction %> mJ</p>

      <h2>Energy Visualization</h2>
      <canvas id="energyChart" width="400" height="200"></canvas>

      <a href="/">← Back to Home</a>
    </div>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script>
    const ctx = document.getElementById('energyChart').getContext('2d');
    const energyChart = new Chart(ctx, {
      type: 'bar',
      data: {
        labels: ['Predicted Energy'],
        datasets: [{
          label: 'Energy (mJ)',
          data: [<%= Number(prediction) %>],
          backgroundColor: 'rgba(80, 200, 120, 0.7)',
          borderColor: 'rgba(80, 200, 120, 1)',
          borderWidth: 2,
          borderRadius: 5
        }]
      },
      options: {
        scales: {
          y: {
            beginAtZero: true,
            ticks: {
              stepSize: 1,
              color: '#7fffd4',
              font: { weight: 'bold' }
            }
          },
          x: {
            ticks: { color: '#7fffd4', font: { weight: 'bold' } }
          }
        },
        plugins: {
          legend: {
            labels: { color: '#50c878', font: { weight: 'bold' } }
          }
        }
      }
    });
  </script>


  <script>
    document.addEventListener("DOMContentLoaded", function () {
      const menuIcon = document.getElementById("menuToggle");
      const slideMenu = document.getElementById("slideMenu");

      if (menuIcon && slideMenu) {
        menuIcon.addEventListener("click", () => {
          slideMenu.classList.toggle("show");
        });

        slideMenu.querySelectorAll("a").forEach(link => {
          link.addEventListener("click", (e) => {
            slideMenu.classList.remove("show");
            const href = link.getAttribute("href");
            if (href.startsWith("#")) {
              const target = document.querySelector(href);
              if (target) {
                e.preventDefault();
                target.scrollIntoView({ behavior: "smooth" });
              }
            }
          });
        });
      }
    });
  </script>

</body>
</html>
