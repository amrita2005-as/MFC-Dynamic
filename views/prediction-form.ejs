<!-- views/prediction-form.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <style>
    body {
      background-color: #081c11;
      color: #e0f7e9;
      font-family: Arial, sans-serif;
      padding: 50px;
    }
    .form-container {
      max-width: 500px;
      margin: auto;
      background-color: #143820;
      padding: 30px;
      border-radius: 12px;
      box-shadow: 0 0 15px rgba(80, 200, 120, 0.3);
    }
    .form-control {
      margin-bottom: 15px;
    }
    .btn-custom {
      background-color: #50c878;
      color: #081c11;
      font-weight: 600;
    }
    .btn-custom:hover {
      background-color: #3aa35b;
      color: white;
    }
  </style>
</head>
<body>
  
  <div class="form-container">
    <h2 class="text-center mb-4">Predict Energy Output</h2>
    <form action="/prediction" method="POST">
      <div class="mb-3">
        <label for="pH" class="form-label">pH Value</label>
        <input type="number" step="0.01" min="0" max="14" placeholder = "Enter pH (0 to 14)" name="pH" id="pH" class="form-control" required>
      </div>
      <div class="mb-3">
        <label for="temperature" class="form-label">Temperature (¬∞C)</label>
        <input type="number" step="0.1" name="temperature" id="temperature" placeholder = "eg.35.5" class="form-control" required>
      </div>
      <div class="mb-3">
        <label for="gas_level" class="form-label">Gas Level</label>
        <input type="number" step="0.01" name="gas_level" id="gas_level" placeholder = "Enter gas level (Eg.450)" class="form-control" required>
      </div>
      <div class="mb-3">
        <label for="weight_kg" class="form-label">Weight (kg)</label>
        <input type="number" step="0.01" name="weight_kg" id="weight_kg" placeholder = "Enter weight in kg" class="form-control" required>
      </div>
      <div class="text-center">
        <button type="submit" class="btn btn-custom">üîç Predict</button>
      </div>
    </form>
  </div>
</body>
</html>