/* Footer Styling */
.site-footer {
  background-color: #0b1d1a; /* Match header dark green/black theme */
  color: #cde4d3;
  text-align: center;
  padding: 30px 10px;
  margin-top: 60px;
  border-top: 1px solid #244239;
  font-family: 'Segoe UI', sans-serif;
}

.footer-links {
  margin-bottom: 10px;
}

.footer-links a {
  margin: 0 15px;
  color: #88d4a6;
  text-decoration: none;
  font-size: 1rem;
  transition: color 0.3s ease;
}

.footer-links a:hover {
  color: #b7ffcb;
}

.site-footer hr {
  width: 80%;
  margin: 10px auto;
  border: 0;
  border-top: 1px solid #2c4941;
}

.site-footer .copyright {
  font-size: 0.85rem;
  color: #a3c6b2;
  margin-top: 8px;
}
